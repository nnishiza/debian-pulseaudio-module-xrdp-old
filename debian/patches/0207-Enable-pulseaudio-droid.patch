+static int unsuspend(struct userdata *u) {
+    pa_assert(u);
+    pa_assert(u->sink);
+
+    /* HAL resumes automagically when writing to standby stream, but let's set max request */
+    pa_sink_set_max_request_within_thread(u->sink, u->buffer_size);
+
+    pa_log_info("Resuming...");
+
+    return 0;
+}
