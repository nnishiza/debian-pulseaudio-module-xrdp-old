+            pa_log("Bad sample rate value %s", entry);
+            pa_xfree(entry);
+            return false;
+        }
+
+        sampling_rates[pos++] = val;
+
+        pa_xfree(entry);
+
+    }
+
+    sampling_rates[pos] = 0;
+
+    return true;
+}
