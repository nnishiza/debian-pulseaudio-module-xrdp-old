+#else
+    pa_snprintf(tmp, sizeof(tmp), "%s=%u", AUDIO_PARAMETER_STREAM_ROUTING, devices);
+#endif
+    pa_log_debug("set_parameters(): %s (%s : %#010x)", tmp, devlist, devices);
